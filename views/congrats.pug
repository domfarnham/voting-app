extends layout

block content
  link(rel='stylesheet', href='/stylesheets/my-polls.css')
  body(class="text-center")
    nav(class="navbar navbar-expand-md navbar-dark fixed-top bg-dark")
      a(class="navbar-brand" href="/user-home") Vote4
      button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")
      div(class="collapse navbar-collapse" id="navbarCollapse")
        ul(class="navbar-nav mr-auto")
          li(class="nav-item active")
            a(class="nav-link" href="/user-home") Home 
              span(class="sr-only") (current)
          li(class="nav-item")
            a(class="nav-link" href="/logout") Logout
      a(class="nav-link" href="/user-home") #{user.firstName}
    main(class="center-div")
      h1(class="display-4") Congratulations!
      p(class="lead") Your poll has been posted to 
        a(href=pollURL) #{pollURL}
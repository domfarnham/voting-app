extends layout

block content
  link(rel='stylesheet', href='/stylesheets/new-poll.css')
  body(class="text-center")
    nav(class="navbar navbar-expand-md navbar-dark fixed-top bg-dark")
      a(class="navbar-brand" href="/user-home") Vote4
      button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")
      div(class="collapse navbar-collapse" id="navbarCollapse")
        ul(class="navbar-nav mr-auto")
          li(class="nav-item active")
            a(class="nav-link" href="/user-home") Home 
              span(class="sr-only") (current)
          li(class="nav-item")
            a(class="nav-link" href="/") Logout
      a(class="nav-link" href="/user-home") #{user.firstName}
    main(class="center-div")
      h1 New Poll
      form
        div(class="form-group")
          label(for="nameYourPoll") Name your poll
          input(type="text" class="form-control" id="nameYourPoll" placeholder="What is your favourite color?" required autofocus)
        div(class="form-group")
          label(for="nameYourPoll") Options
          input(type="text" class="form-control" id="nameYourPoll" required)
          input(type="text" class="form-control" id="nameYourPoll" required)
        button(class="btn btn-dark" type="button") More options
        button(class="btn btn-dark" type="submit") Submit